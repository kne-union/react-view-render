{
  "id": "Input",
  "name": "输入框",
  "property": {
    "label": {
      "input-type": "$input",
      "label": "label"
    },
    "name": {
      "input-type": "$input",
      "label": "name"
    },
    "rule": {
      "input-type": "$input",
      "label": "验证规则"
    },
    "interceptor": {
      "input-type": "$input",
      "label": "拦截器"
    },
    "noTrim": {
      "input-type": "$switch",
      "label": "是否不去掉两端空格"
    },
    "debounce": {
      "input-type": "$number",
      "label": "去抖动时间"
    },
    "allowClear": {
      "input-type": "$switch",
      "label": "可以点击清除图标删除内容"
    },
    "bordered": {
      "input-type": "$switch",
      "label": "是否有边框",
      "default-value": true
    },
    "disabled": {
      "input-type": "$switch",
      "label": "是否禁用"
    },
    "maxLength": {
      "input-type": "$number",
      "label": "最大长度"
    },
    "readOnly": {
      "input-type": "$switch",
      "label": "只读"
    }
  },
  "children": {
    "allow": [],
    "dependence": [
      "Form"
    ]
  },
  "defaultProps": {
    "placeholder": "请输入",
    "name": "$id",
    "label": "输入框"
  }
}